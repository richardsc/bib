@article{Wang+Pawlowicz:2011,
    abstract = {A novel aerial observational method for studying
                  internal features in the coastal ocean is developed
                  and tested in a study of large nonlinear internal
                  solitary-like waves. Photogrammetrically rectified
                  oblique photo images from a circling aircraft are
                  used to track a number of internal wave packets for
